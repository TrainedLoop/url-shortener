@model UrlShortedModel
@{
    ViewData["Title"] = "Encurtador de urls";

}

<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <form asp-action="Index">
            <div class="form-group">
                <div class=" col-sm-10">
                    <input asp-for="Url" class="form-control" placeholder="https://www.danielporto.pt" />
                </div>
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-success">Encurtar!</button>
                </div>
            </div>
        </form>
    </div>
</div>
@if (Model?.ShortedHash != null)
{
    <br />
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <label>sua url encurtada é: <a href="@Model.ShortedHash">@Model.ShortedHash</a></label>
        </div>
    </div>
}
